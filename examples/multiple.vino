#!/usr/bin/env vinox
---
default_schematic: "logger"
manifest:
  schematics:
    - name: logger
      components:
        logger:
          ref: vino::log
      connections:
        - from:
            reference: vino::schematic_input
            port: input
          to:
            reference: logger
            port: input
        - from:
            reference: logger
            port: output
          to:
            reference: vino::schematic_output
            port: output
    - name: second_logger
      components:
        logger:
          ref: vino::log
        logger2:
          ref: vino::log
      connections:
        - from:
            reference: vino::schematic_input
            port: input
          to:
            reference: logger
            port: input
        - from:
            reference: logger
            port: output
          to:
            reference: logger2
            port: input
        - from:
            reference: logger2
            port: output
          to:
            reference: vino::schematic_output
            port: output
