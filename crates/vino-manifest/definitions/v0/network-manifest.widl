type ReferenceEntry {
    "deprecated"
    reference: string @deprecated,

    "deprecated"
    target: string @deprecated,
}

"deprecated"
type ConnectionEntry {
    "deprecated"
    from: ActorPortEntry @deprecated,

    "deprecated"
