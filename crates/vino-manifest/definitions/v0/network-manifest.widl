
"A Vino network definition"
type NetworkManifest {
  "The labels that apply to this host"
    labels: {string: string},

    "The links between capabilities and components"
    schematics: [SchematicManifest],

    "deprecated"
    capabilities: [Capability]  @deprecated,

    "deprecated"
    links: [LinkEntry] @deprecated,

    "deprecated"
    actors: [string] @deprecated,

    "deprecated"
    components: [string] @deprecated,

    "deprecated"
    references: [ReferenceEntry] @deprecated,

    "deprecated"
    connections: [ConnectionEntry] @deprecated,
}

"deprecated"
type Capability {
    "deprecated"
    image_ref: string @deprecated,

    "deprecated"
    link_name: string? @deprecated,
}

"deprecated"
